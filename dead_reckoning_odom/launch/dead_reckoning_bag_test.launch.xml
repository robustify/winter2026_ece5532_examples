<?xml version="1.0"?>
<launch>

    <node pkg="dead_reckoning_odom" exec="dead_reckoning_odom" name="dead_reckoning_odom">
        <param name="parent_frame" value="world" />
        <param name="initial_heading_deg" value="0.0" />
        <param name="use_sim_time" value="true" />
    </node>

    <node pkg="gps_example" exec="gps_example" name="gps_example" output="screen">
        <param name="ref_lat" value="42.6794081" />
        <param name="ref_lon" value="-83.1956015" />
        <param name="ref_alt" value="281.0" />
        <param name="use_sim_time" value="true" />
        <remap from="fix" to="gps_fix" />
    </node>

    <node pkg="rviz2" exec="rviz2" name="bag_viz" args="-d $(find-pkg-share dead_reckoning_odom)/rviz/bag_playback.rviz" />

    <node pkg="image_view" exec="image_view" name="image_view">
        <param name="image_transport" value="compressed" />
    </node>

</launch>
